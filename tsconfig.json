{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": false,
		"noImplicitThis": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [ "ESNext", "DOM" ],
		"skipLibCheck": true
	},
	"include": [ "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "./*.ts" ]
}
